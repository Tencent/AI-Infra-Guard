{
  "http": {
    "name": "HTTP接口",
    "icon": "/images/http.webp",
    "description": "配置HTTP端点以发送请求",
    "fields": [
      {
        "field": "label",
        "label": "目标标签",
        "type": "text",
        "required": false,
        "placeholder": "为此目标输入描述性名称",
        "description": "此目标的描述性名称"
      },
      {
        "field": "url",
        "label": "URL",
        "type": "text",
        "required": true,
        "placeholder": "https://api.example.com/chat",
        "description": "要发送请求的HTTP端点URL"
      },
      {
        "field": "method",
        "label": "HTTP方法",
        "type": "select",
        "required": true,
        "options": [
          { "label": "POST", "value": "POST" },
          { "label": "GET", "value": "GET" },
          { "label": "PUT", "value": "PUT" },
          { "label": "PATCH", "value": "PATCH" },
          { "label": "DELETE", "value": "DELETE" }
        ],
        "defaultValue": "POST",
        "description": "HTTP请求方法"
      },
      {
        "field": "headers",
        "label": "请求头",
        "type": "textarea",
        "required": false,
        "placeholder": "{\n  \"Content-Type\": \"application/json\"\n}",
        "defaultValue": "{\n  \"Content-Type\": \"application/json\"\n}",
        "rows": 4,
        "description": "JSON格式的HTTP请求头"
      },
      {
        "field": "body",
        "label": "请求体",
        "type": "textarea",
        "required": false,
        "placeholder": "{\n  \"message\": \"{{prompt}}\"\n}",
        "defaultValue": "{\n  \"message\": \"{{prompt}}\"\n}",
        "rows": 6,
        "description": "请求体模板。使用 {{prompt}} 作为测试输入的占位符"
      },
      {
        "field": "transform_response",
        "label": "响应解析器",
        "type": "text",
        "required": false,
        "placeholder": "json.choices[0].message.content",
        "description": "用于提取响应的JSONPath或JavaScript表达式（可选）"
      },
      {
        "field": "timeout_ms",
        "label": "超时时间（毫秒）",
        "type": "number",
        "required": false,
        "min": 1000,
        "max": 300000,
        "step": 1000,
        "defaultValue": 30000,
        "description": "请求超时时间（毫秒）"
      }
    ]
  },
  "dify": {
    "name": "Dify AI",
    "icon": "/images/webp.png",
    "description": "配置Dify AI平台",
    "fields": [
      {
        "field": "label",
        "label": "目标标签",
        "type": "text",
        "required": false,
        "placeholder": "为此目标输入描述性名称",
        "description": "此目标的描述性名称"
      },
      {
        "field": "dify_type",
        "idSuffix": "dify:{value}",
        "label": "Dify端点类型",
        "type": "select",
        "required": true,
        "options": [
          { "label": "聊天消息", "value": "chat" },
          { "label": "工作流", "value": "workflow" }
        ],
        "defaultValue": "chat",
        "description": "聊天消息用于对话应用，工作流用于工作流执行"
      },
      {
        "field": "apiBaseUrl",
        "label": "API基础URL",
        "type": "text",
        "required": false,
        "placeholder": "https://api.dify.ai/v1",
        "description": "Dify API基础URL。留空使用默认值或DIFY_API_BASE环境变量"
      },
      {
        "field": "apiKey",
        "label": "API密钥",
        "type": "password",
        "required": false,
        "placeholder": "app-xxxx",
        "description": "Dify API密钥。如果未设置，将使用DIFY_API_KEY环境变量"
      },
      {
        "field": "extra.user",
        "label": "用户ID",
        "type": "text",
        "required": false,
        "defaultValue": "agent-user",
        "description": "对话的用户标识符"
      },
      {
        "field": "extra.conversation_id",
        "label": "对话ID",
        "type": "text",
        "required": false,
        "placeholder": "留空开始新对话",
        "description": "留空开始新对话，或提供现有对话ID"
      },
      {
        "field": "extra.inputs",
        "label": "自定义输入",
        "type": "textarea",
        "required": false,
        "placeholder": "{}",
        "defaultValue": "{}",
        "rows": 4,
        "description": "将传递给Dify应用/工作流的自定义输入（JSON格式）"
      },
      {
        "field": "timeout_ms",
        "label": "超时时间（毫秒）",
        "type": "number",
        "required": false,
        "min": 1000,
        "max": 300000,
        "step": 1000,
        "defaultValue": 60000,
        "description": "请求超时时间（毫秒）"
      }
    ]
  },
  "coze": {
    "name": "Coze AI",
    "icon": "/images/coze.png",
    "description": "配置Coze AI机器人平台",
    "fields": [
      {
        "field": "label",
        "label": "目标标签",
        "type": "text",
        "required": false,
        "placeholder": "为此目标输入描述性名称",
        "description": "此目标的描述性名称"
      },
      {
        "field": "coze_region",
        "idSuffix": "coze:{value}",
        "label": "Coze区域",
        "type": "select",
        "required": true,
        "options": [
          { "label": "中国 (api.coze.cn)", "value": "coze-cn" },
          { "label": "国际 (api.coze.com)", "value": "coze-com" }
        ],
        "defaultValue": "cn",
        "description": "选择Coze API区域"
      },
      {
        "field": "extra.bot_id",
        "label": "机器人ID",
        "type": "text",
        "required": true,
        "placeholder": "输入您的Coze机器人ID",
        "description": "必填。来自Coze平台的机器人ID"
      },
      {
        "field": "apiBaseUrl",
        "label": "API基础URL",
        "type": "text",
        "required": false,
        "placeholder": "https://api.coze.cn",
        "description": "Coze API基础URL。留空根据区域使用默认值"
      },
      {
        "field": "apiKey",
        "label": "API密钥",
        "type": "password",
        "required": false,
        "placeholder": "pat_xxxx",
        "description": "Coze API密钥。如果未设置，将使用COZE_API_KEY环境变量"
      },
      {
        "field": "extra.user_id",
        "label": "用户ID",
        "type": "text",
        "required": false,
        "defaultValue": "agent-user",
        "description": "对话的用户标识符"
      },
      {
        "field": "extra.conversation_id",
        "label": "对话ID",
        "type": "text",
        "required": false,
        "placeholder": "留空开始新对话",
        "description": "留空开始新对话，或提供现有对话ID"
      },
      {
        "field": "timeout_ms",
        "label": "超时时间（毫秒）",
        "type": "number",
        "required": false,
        "min": 1000,
        "max": 300000,
        "step": 1000,
        "defaultValue": 120000,
        "description": "请求超时时间（毫秒，默认：120000ms = 2分钟）"
      }
    ]
  },
  "common": {
    "name": "通用配置",
    "description": "所有provider类型的通用配置选项",
    "fields": [
      {
        "field": "delay",
        "label": "延迟（毫秒）",
        "type": "number",
        "required": false,
        "min": 0,
        "max": 60000,
        "step": 100,
        "defaultValue": 0,
        "description": "请求之间的延迟时间（毫秒），用于模拟真实用户"
      }
    ]
  }
}
